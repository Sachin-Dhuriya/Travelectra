<% layout('./layouts/boilerplate') -%>

    <body>
        <div class="form-container">
            <h1>Add New Listing</h1>
            <form action="/listing" method="post" class="needs-validation" novalidate >
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input id="title" class="form-control" name="listing[title]" type="text" placeholder="Enter Title" required>
                    <div class="invalid-feedback">
                        Enter a valid title
                      </div>
                </div>  

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="listing[description]" rows="5"
                        placeholder="Enter the property description" required></textarea>
                        <div class="invalid-feedback">
                            Enter a valid description
                          </div>
                </div>

                <div class="form-group">
                    <label for="image">Image Link:</label>
                    <input class="form-control" id="image" name="listing[image]" type="text" placeholder="Enter the Image Link">
                </div>

                <div class="form-group">
                    <label for="price">Price:</label>
                    <input class="form-control" id="price" name="listing[price]" type="number" placeholder="Enter price" required>
                    <div class="invalid-feedback">
                        Enter price
                      </div>
                </div>

                <div class="form-group">
                    <label for="location">Location:</label>
                    <input class="form-control" id="location" name="listing[location]" type="text" placeholder="Enter Location" required>
                    <div class="invalid-feedback">
                        Enter location
                      </div>
                </div>

                <div class="form-group">
                    <label for="country">Country:</label>
                    <input class="form-control" id="country" name="listing[country]" type="text" placeholder="Enter Country" required>
                    <div class="invalid-feedback">
                        Enter country
                      </div>
                </div>

                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>
    </body>